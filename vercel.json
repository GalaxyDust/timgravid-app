{
    "version": 2,
    "builds": [
        {
            "src": "public",
            "use": "@vercel/static"
        },
        {
            "src": "api/index.php",
            "use": "vercel-php@0.7.2"
        }
    ],
    "routes": [
        { "src": "/build/(.*)", "dest": "/public/build/$1" },
        { "src": "/images/(.*)", "dest": "/public/images/$1" },
        { "src": "/storage/(.*)", "dest": "/public/storage/$1" },
        { "src": "/(.*)", "dest": "/api/index.php" }
    ]
}