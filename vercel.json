{
    "version": 2,
    "builds": [
        {
            "src": "api/index.php",
            "use": "@juicyfx/vercel-php"
        },
        {
            "src": "public",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(build|assets|images|css|js)/(.*)",
            "dest": "/public/$1/$2"
        },
        {
            "src": "/storage/(.*)",
            "dest": "/public/storage/$1"
        },
        {
            "src": "/favicon.ico",
            "dest": "/public/favicon.ico"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ]
}
